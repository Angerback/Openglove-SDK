            <ComboBox x:Name="comboBox16" HorizontalAlignment="Left" Margin="192,190,0,0" VerticalAlignment="Top" Width="47" Height="21" TabIndex="15" IsTabStop="False" SelectionChanged="selectorsSelectionChanged"/>
