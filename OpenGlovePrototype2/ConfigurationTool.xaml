            <ComboBox x:Name="comboBox24" HorizontalAlignment="Left" Margin="192,256,0,0" VerticalAlignment="Top" Width="43" Height="21"  TabIndex="23" IsTabStop="False"/>
            <ComboBox x:Name="comboBox25" HorizontalAlignment="Left" Margin="257,237,0,0" VerticalAlignment="Top" Width="45" Height="21"  TabIndex="24" IsTabStop="False" SelectionChanged="selectorsSelectionChanged"/>
