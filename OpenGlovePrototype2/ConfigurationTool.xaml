            <ComboBox x:Name="comboBox12" HorizontalAlignment="Left" Margin="195,136,0,0" VerticalAlignment="Top" Width="44" Height="20" TabIndex="11" IsTabStop="False" SelectionChanged="selectorsSelectionChanged"/>
            <ComboBox x:Name="comboBox13" HorizontalAlignment="Left" Margin="31,210,0,0" VerticalAlignment="Top" Width="49" Height="21" RenderTransformOrigin="0.521,0.619" TabIndex="12" IsTabStop="False" SelectionChanged="selectorsSelectionChanged"/>
